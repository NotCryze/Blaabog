@page
@model SBO.BlaaBog.Web.Pages.Teachers.AccountModel
@{
    ViewData["Title"] = "Teacher Account";
}

<div class="card p-4 w-50">
    <div class="card-body">
        <div class="mb-3">
            <h3>Edit Account</h3>
        </div>

        <form class="mb-3">
            <div class="mb-3">
                <label asp-for="Account.Name">Name</label>
                <input asp-for="Account.Name" class="form-control" />
                <span asp-validation-for="Account.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Account.Email">Email</label>
                <input asp-for="Account.Email" class="form-control" />
                <span asp-validation-for="Account.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Account.Password">Password</label>
                <input asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>