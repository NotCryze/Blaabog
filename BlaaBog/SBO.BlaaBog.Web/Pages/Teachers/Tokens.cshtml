@page
@using SBO.BlaaBog.Domain.Entities;
@model SBO.BlaaBog.Web.Pages.Teachers.TokensModel
@{
    ViewData["Title"] = "Tokens";
}

<div class="container-fluid p-0 mb-3">
    <div class="row">
        <div class="col justify-content-end d-flex">
            <form method="post">
                <button type="submit" class="btn btn-primary" name="generateToken"><i class="fa-solid fa-plus"></i></button>
            </form>
        </div>
    </div>
</div>
<div>
    <table id="tokens" class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Token</th>
                <th>Teacher</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Token in Model.TeacherTokens)
            {
                <tr>
                    <td>@Token.Id</td>
                    <td>@Token.Token</td>

                    @if (Token.Teacher == null || Token.Teacher.Id == null)
                    {
                        <td>Not assigned</td>
                    }
                    else
                    {
                        <td>@Token.Teacher.Name</td>
                    }

                    <td>@Token.CreatedAt</td>
                    <td>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#delete-@Token.Id"><i class="fa-solid fa-trash-can fa-fw"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (TeacherToken token in Model.TeacherTokens)
{
    <div class="modal fade" id="delete-@token.Id" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form method="post">
                    <input type="hidden" name="deleteToken" value="@token.Id" />
                    <div class="modal-header">
                        <h1 class="modal-title fs-5">Delete Token</h1>
                        <button type="reset" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <h6>Token</h6>
                            <p class="mw-100 text-break overflow-y-auto" style="max-height: 100px">@token.Token</p>
                        </div>
                        <div class="mb-3">
                            <h6>Teacher</h6>
                            <p class="mw-100 text-break overflow-y-auto" style="max-height: 100px">
                                @if (token.Teacher == null || token.Teacher.Id == null)
                                {
                                    <td>Not assigned</td>
                                }
                                else
                                {
                                    <td>@token.Teacher.Name</td>
                                }
                            </p>
                        </div>
                        <div>
                            <h6>Are you sure you want to delete this token? This cannot be undone.</h6>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        new DataTable(
            '#tokens',
            {
                "columnDefs": [
                    {
                        "orderable": false,
                        "targets": -1
                    },
                    {
                        "orderable": true,
                        "targets": 0
                    }
                ],
                "order": [
                    [
                        0,
                        "desc"
                    ]
                ]
            }
        );
    </script>
}
