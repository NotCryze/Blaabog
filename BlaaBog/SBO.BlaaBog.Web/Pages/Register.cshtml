@page
@model SBO.BlaaBog.Web.Pages.RegisterModel
@{
    ViewData["Title"] = "Student Register";
}

<div class="container">
    <div class="col-md-4 offset-md-4">
        <h2 class="mb-4 text-center">Register</h2>

        <ul class="nav nav-tabs">

            <li class="nav-item w-50 text-center">
                <a class="nav-link active" aria-current="page" asp-page="/Register">Student</a>
            </li>
            <li class="nav-item w-50 text-center">
                <a class="nav-link text-reset" asp-page="/Teachers/Register">Teacher</a>
            </li>

        </ul>

        <div class="card p-4 card-fix-top">

            <div class="text-center">
                <h3>Welcome!</h3>
            </div>

            <form method="post">
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="token" class="form-label col">Token</label>
                        </div>
                        <div class="col-auto me-auto">
                            <span asp-validation-for="Register.Token" class="text-danger col-auto me-auto"></span>
                        </div>
                    </div>
                    <input type="text" asp-for="Register.Token" class="form-control" id="token" placeholder="Token" required>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="name" class="form-label">Name</label>
                        </div>

                        <div class="col-auto me-auto">
                            <span asp-validation-for="Register.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="text" asp-for="Register.Name" class="form-control" id="name" placeholder="Name" required>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="email" class="form-label">Email</label>
                        </div>

                        <div class="col-auto me-auto">
                            <span asp-validation-for="Register.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="email" asp-for="Register.Email" class="form-control" id="email" placeholder="Email" required>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="password" class="form-label">Password</label>
                        </div>

                        <div class="col-auto me-auto">
                            <span asp-validation-for="Register.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <input type="password" asp-for="Register.Password" class="form-control" id="password" placeholder="Password" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>

            <p class="mt-3 text-center">Already have an account? <a asp-page="/Login">Login</a></p>
        </div>
    </div>
</div>